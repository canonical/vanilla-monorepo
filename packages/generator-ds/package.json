    "@canonical/typescript-config-base": "^0.4.0-experimental.0",
    "@types/debug": "^4.1.12",
    "@types/json-schema": "^7.0.15",
    "@types/node": "^22.10.1",
    "copyfiles": "2.4.1",
    "typescript": "5.7.2"
  }
